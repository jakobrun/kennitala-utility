{
  "name": "kennitala-utility",
  "version": "4.3.0",
  "description": "Utility functions for icelandic social security numbers (kennitolur).",
  "main": "js/src/index.js",
  "types": "js/src/index.d.ts",
  "scripts": {
    "test": "mocha --recursive js/*.spec.js",
    "lint": "tslint src/*",
    "clean": "rm -rf js",
    "compile": "tsc",
    "build": "npm run lint && npm run clean && npm run compile",
    "ci": "npm run build && npm run test",
    "tdd": "mocha --exit -R min --require ts-node/register --recursive --watch-extensions ts --watch  src/*.spec.ts",
    "format": "prettier --write 'src/*.ts'",
    "format-verify": "prettier -l 'src/*.ts'"
  },
  "keywords": [
    "kennitala",
    "kennitolur",
    "kennit√∂lur",
    "identitynumber"
  ],
  "author": "Tryggingamidstodin <bt.hugbunadargerd@tm.is> (https://github.com/tryggingamidstodin/)",
  "files": [
    "js"
  ],
  "config": {
    "ghooks": {
      "pre-commit": "npm run format-verify",
      "pre-push": "npm run ci"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.10",
    "chai": "^4.2.0",
    "ghooks": "^2.0.4",
    "husky": "^1.2.0",
    "mocha": "^5.2.0",
    "prettier": "^1.15.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tryggingamidstodin/kennitala-utility"
  }
